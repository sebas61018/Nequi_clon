<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/nequifondo">

    <Button
        android:id="@+id/id_iniciosesion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/stylesbotton"
        android:text="Inicia sesion"
        android:textColor="@color/nequi_colo1" />

    <Button
        android:id="@+id/id_crearcuenta"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/id_iniciosesion"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/stylesbotton"
        android:text="Abre una cuenta"
        android:textColor="@color/nequi_colo1" />




</RelativeLayout>